<Page x:Class="Memorama.Pages.CrearPartidaPG"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Memorama.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CrearPartidaPG">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Memorama;component/Resources/Background.jpg"/>
        </Grid.Background>
        <TextBlock Name="tbBanEntrada" HorizontalAlignment="Left" Margin="30,30,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="337" Background="White" Width="225"/>
        <TextBox Name="txtBanSalida" HorizontalAlignment="Left" Height="33" Margin="30,372,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="165" BorderBrush="#89FFFFFF" Foreground="Black" FontSize="16" Background="White"/>
        <Button  Name="btnEnviar" HorizontalAlignment="Left" Margin="200,372,0,0" VerticalAlignment="Top" Width="55" Height="33" Background="#FF3AB1B7" BorderBrush="{x:Null}">
            <materialDesign:PackIcon Kind="Send" Height="25" Width="45" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFE6E6E6"/>
            
        </Button>

    </Grid>
</Page>
