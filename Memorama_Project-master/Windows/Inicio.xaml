<mah:MetroWindow
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Memorama.Windows.Inicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Memorama.Windows"
        mc:Ignorable="d"
        Title="Inicio" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Memorama;component/Resources/Background.jpg"/>
        </Grid.Background>
        <Button Content="Crear Partida" HorizontalAlignment="Left" Margin="105,140,0,0" VerticalAlignment="Top" Width="230" FontFamily="Showcard Gothic" Background="#FF009E2C" Height="70
                " BorderBrush="{x:Null}" FontSize="16"/>
        <Button Content="Tabla de Puntuaciones" HorizontalAlignment="Left" Margin="105,238,0,0" VerticalAlignment="Top" Width="230" Background="#FFA47CBE" Height="70" FontFamily="Showcard Gothic" BorderBrush="{x:Null}" FontSize="16"/>
        <Button Content="Unirse a Partida" HorizontalAlignment="Left" Margin="440,140,0,0" VerticalAlignment="Top" Width="230" Background="#FFFF9900" Height="70" FontFamily="Showcard Gothic" BorderBrush="{x:Null}" FontSize="16"/>
        <Button Content="Configuración" HorizontalAlignment="Left" Margin="440,238,0,0" VerticalAlignment="Top" Width="230" Background="#FF1E78F1" Height="70" FontFamily="Showcard Gothic" BorderBrush="{x:Null}" FontSize="16"/>
        <Button Name = "btnSalir" Click="btnSalir_Click"  Content="Salir" HorizontalAlignment="Left" Margin="270,335,0,0" VerticalAlignment="Top" Width="230" Background="Red" FontFamily="Showcard Gothic" Height="45" BorderBrush="{x:Null}" FontSize="16"/>
        <Rectangle Fill="#FF517EB0" HorizontalAlignment="Left" Height="50" Margin="245,35,0,0" VerticalAlignment="Top" Width="300" StrokeStartLineCap="Round" StrokeEndLineCap="Round" RadiusX="10" RadiusY="10"/>
        <Label Content="INICIO" HorizontalAlignment="Left" Margin="350,40,0,0" VerticalAlignment="Top" Height="40" Width="90" Foreground="Black" FontFamily="Showcard Gothic" FontSize="25"/>
        <Label Content="Bienvenido @" HorizontalAlignment="Left" Margin="334,103,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Showcard Gothic" FontSize="15"/>

    </Grid>
</mah:MetroWindow>
